---
import { Image } from '@astrojs/image/components'
import Highlighted from '../components/Highlighted.astro'
---

<section
  class="font-display mx-auto flex max-w-screen-xl flex-col-reverse gap-10 px-5 pt-20 sm:px-10 md:pt-32 lg:flex-row lg:gap-20 lg:pt-44">
  <Image
    src="images/local-barberia-hb.jpg"
    alt="Local Barbería HB en Crevillente"
    width={680}
    height={475}
    format="webp"
    quality={100}
    class="object-cover object-top w-full max-w-md mx-auto rounded-sm aspect-video contrast-75"
  />
  <div>
    <h1
      class="mx-auto mb-10 max-w-screen-md gap-x-2 text-center text-4xl font-semibold lg:text-left lg:text-5xl">
      Barbería y peluquería de caballeros en
      <Highlighted text="Crevillente" />
    </h1>
  </div>
</section>
