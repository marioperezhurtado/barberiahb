---
import { Image } from '@astrojs/image/components'

interface Props {
  title: string
  description: string
  image: string
  price: number
}

const { title, description, image, price } = Astro.props
---

<div
  class="relative flex flex-row overflow-hidden rounded-sm h-62 aspect-video">
  <Image src={image} alt={`Imagen ${title}`} height={475} width={680} format="webp" class="object-cover w-40 h-62"/>
  <div class="absolute top-0 left-0 block w-40 h-full bg-gradient-to-t from-black h-62"/>
  

  <div class="flex flex-col w-1/2 p-4 rounded-sm rounded-l-none bg-zinc-600">
    <div class="flex items-start justify-between gap-2">
      <h3 class="font-semibold">{title}</h3>
      <span class="font-bold text-yellow-200">{price}â‚¬</span>
    </div>
    <p class="mt-auto text-sm">{description}</p>
  </div>
</div>
